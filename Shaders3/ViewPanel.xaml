<UserControl x:Class="Shaders3.ViewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shaders3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <Canvas x:Name="ParentCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Image x:Name="BackgroundImage" >
                </Image>
                <InkCanvas x:Name="DrawingInkCanvas" Background="Transparent" Width="{Binding ElementName=BackgroundImage, Path=ActualWidth}" Height="{Binding ElementName=BackgroundImage, Path=ActualHeight}" />
                <local:TransparencyInkCanvas x:Name="TransparentInkCanvas" Background="Transparent" Width="{Binding ElementName=BackgroundImage, Path=ActualWidth}" Height="{Binding ElementName=BackgroundImage, Path=ActualHeight}" Focusable="False" IsHitTestVisible="False" />
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
